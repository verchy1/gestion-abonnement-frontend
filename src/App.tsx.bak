      if (form.proprio === 'Moi') {
        delete data['vendeurId'];
      }
      ajouterAbonnement(data);
    } else {
      alert('Veuillez remplir tous les champs');
    }
  };

  return (
    <div className="space-y-4">
      <div>
        <label className="block text-sm font-semibold text-gray-700 mb-2">
          Service d'abonnement
        </label>
